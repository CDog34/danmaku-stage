{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "module": "esnext",
    "target": "es2016",
    "sourceMap": true,
    "strictPropertyInitialization": false,
    "lib": [
      "dom",
      "es5",
      "es2015",
      "es2016"
    ]
  },
  "exclude": [
    "./node_modules",
    "./dist"
  ]
}
